<div id="top-homepage">
<h1> Poolr </h1>
<div class="d-flex justify-content-center">
  &nbsp;&nbsp;&nbsp;&nbsp;
  <h2>Sharing&nbsp;&nbsp;</h2>
  <h2>Happiness</h2>
</div>
<p>The perfect solution to book a pool</p>
</div>

<div class="d-flex justify-content-between">
  <div class="container">
    <div class="cards">
      <% @pools.each do |pool| %>
        <div class="card">
            <%= link_to pool_path(pool) do  %>
            <div class="card-category card-img"  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path pool.photo%>')">
            </div>
            <% end %>
             <div class="card-content">
               <h3><%= pool.name %></h3>
             </div>
            <div class="card-body">
               <p>Location: <%= pool.location %></p>
               <p>Price: <%= pool.price %>$</p>
               <p>Number of people: <%= pool.number_of_people %></p>
             </div>
           </div>
      <% end %>
      </div>
  </div>
</div>

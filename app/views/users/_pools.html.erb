<div class="container">
    <div class="show-form">
      <h2> My pools </h2>
       <% if @pools_i_own.any? %>
      <% @pools_i_own.each do |pool| %>
      <ul>
        <a href="<%= cl_image_path pool.photo%>" class="href"></a>
        <li> <%= pool.name %> </li>
        <li> Description: <%= pool.description %></li>
        <li> Location: <%= pool.location %></li>
        <li> Price: <%= pool.price %></li>
        <li> Number of people: <%= pool.number_of_people %></li>
        <li><%= link_to "Add pool", new_pool_path, class: "btn btn-primary mb-1" %></li>
        <li><%= link_to "View pool", pool_path(pool.id), class: "btn btn-primary mb-1" %></li>
        <li><%= link_to "Edit pool", edit_pool_path(pool.id), class: "btn btn-primary mb-1" %></li>
        <li><%= link_to "Delete Pool", pool_path(pool.id), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-primary mb-1" %></li>
      </ul>
<!--       <h3> Reviews </h3>
      <ul>
        <li> </li>
      </ul> -->
      <% end %>
      <% else %>
      <p>You didn't add pool for the moment</p>
      <% end %>
    </div>
</div>


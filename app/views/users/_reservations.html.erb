<div class="container">
  <div class="show-booking-dashboard">
    <h2> My reservations </h2>
    <% if @bookings_i_made.any? %>
      <div class="cards">
        <% @bookings_i_made.each do |booking| %>
          <ul style="list-style: none;">
            <li> Booking total: $<%=booking.total_amount %></li>
            <li> Booking start date: <%=booking.start_date %></li>
            <li> Booking end date: <%= booking.end_date %></li>
            <li> Booking host: <%=booking.user.first_name %> <%=booking.user.last_name %></li>
            <li> Booking pool: <%=booking.pool.name %></li>
            <li><%= link_to "View", booking_path(booking.id), class: "btn btn-primary btn-sm" %></li>
          </ul>
        <% end %>
      </div>
    <% else %>
      <p>You have no reservation for the moment</p>
    <% end %>
  </div>
</div>


<div class="container">
  <div class="col-8">
    <div class="show-card">
      <h2> My reservations </h2>
      <% @bookings_i_made.each do |booking| %>
      <ul>
        <li> Booking total: <%=booking.total_amount %></li>
        <li> Booking start date: <%=booking.start_date %></li>
        <li> Booking end date:" <%= booking.end_date %></li>
        <li> Booking host:" <%=booking.user_id %></li>
        <li> Booking pool:" <%=booking.pool_id %></li>
      </ul>
      <%# if @booking.end_date > Time.now %>
        <%#= render #new review form %>
      <%# end %>
      <% end %>
    </div>
  </div>
</div>

